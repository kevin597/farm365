.select {
  box-sizing: border-box;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
}

.select_text {
  font-size: 28rpx;
  color: #fff;
  line-height: 40rpx;
  height: 40rpx;
}

.words_img {
  width: 16rpx;
  height: 10rpx;
