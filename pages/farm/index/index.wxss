.option_box {
  position: absolute;
  top: 50rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: rgba(255, 255, 255, 0.25);
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  padding: 10rpx;
  color: #fff;
  padding-left: 20rpx;
}

