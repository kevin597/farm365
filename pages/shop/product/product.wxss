/* pages/shop/product/product.wxss */
@import '/pages/shop/common.wxss';

.swiper {
  height: 730rpx;
  position: relative;
}

.sslide_image {
  display: block;
  width: 750rpx;
  height: 730rpx;
}

.imageCount {
  width: 80rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;
  line-height: 40rpx;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  right: 22rpx;
  bottom: 22rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
}

.submitOrder {
  color: #fff;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background: -webkit-linear-gradient(left, #f15c6c, #f7824e);
  background: linear-gradient(to right, #f15c6c, #f7824e);
}

.contact, .goShop, .addCart {
  width: 116rpx;
  text-align: center;
  margin: 0 10rpx;
}

.addCart {
  width: 150rpx;
}

.footer .iconfont {
  height: 46rpx;
  font-size: 40rpx;
  line-height: 48rpx;
}

.footer text {
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
}

.content {
  margin-bottom: 90rpx;
}

.content image {
  display: block;
  width: 100%;
  margin: 10rpx auto;
}

.product-info-title {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #d4d4d4;
  position: relative;
  padding-left: 50rpx;
  border-top: 20rpx solid #f7f7f7;
}

.product-info-title:before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: 25rpx;
  width: 4rpx;
  height: 30rpx;
  background-color: #f7824e;
}

.product-info-title .more {
  position: absolute;
  right: 30rpx;
  top: 0;
}

.product-info-content {
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  color: #808080;
  display: block;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.pingLun {
  padding: 30rpx;
}

.user-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.img {
  overflow: hidden;
}

.img image {
  width: 190rpx;
  height: 190rpx;
  display: block;
  float: left;
  margin: 10rpx 10rpx 0 0;
}

.pingLun-title {
  color: #4c4c4c;
  line-height: 40rpx;
}

.pingLun-name, .pingLun-time {
  height: 60rpx;
  width: 50%;
  display: block;
  float: left;
}
