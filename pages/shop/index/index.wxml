<!--pages/shop/index/index.wxml-->
<my-component my-property='{{navTitleText}}' />

<navigator url='../../user/index/index'>会员</navigator>
<navigator url='../../farm/index/index'>农场</navigator>
<navigator url='../comment/comment'>评价</navigator>

<div class="demo">
  <span class="tip"></span>
  <input type="text" name="" />
  <button>search</button>
</div>

<view></view>

<swiper class='swiper' indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="this">
    <swiper-item>
      <image class="sslide_image" src="{{item}}"></image>
    </swiper-item>
  </block>
</swiper>

<view class='nav_btn'>
  <view class="nav_list" wx:for="{{nav_arry}}" wx:key="{{nav_arry}}" wx:for-index="idx" bindtap="btnanniu">
    <image src="{{item.src}}" mode="aspectFit" class="nav_list_img" id="{{idx}}"></image>
    <text>{{item.text}}</text>
  </view>
</view>

<view class='product_list_ul'>
  <view class='product_list_li' wx:for="{{productList}}" wx:key="{{item.proid}}" wx:for-index="idx">
    <image src="{{item.src}}" mode="aspectFit" class="pro_list_img" id="{{idx}}"></image>
    <view class='pro_list_title'>{{item.title}}</view>
    <view class='pro_list_info'>{{item.title}}</view>
  </view>
</view>